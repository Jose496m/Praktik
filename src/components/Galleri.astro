---
import { Image } from "astro:assets";
import pic1 from "../assets/images/galleri/pic1.webp";
import pic2 from "../assets/images/galleri/pic2.webp";
import pic3 from "../assets/images/galleri/pic3.webp";
import pic4 from "../assets/images/galleri/pic4.webp";
import pic5 from "../assets/images/galleri/pic5.webp";
---

<section class="udvalgtebilleder">
  <div class="galleri">
    <Image class="pic1" src={pic1} alt="pic1" />
    <Image class="pic2" src={pic2} alt="pic2" />
    <Image class="pic3" src={pic3} alt="pic3" />
    <Image class="pic4" src={pic4} alt="pic4" />
    <Image class="pic5" src={pic5} alt="pic5" />
  </div>
</section>

<style>
  .udvalgtebilleder {
    container-type: inline-size;
  }

  @container (width > 37.5em) {
    .galleri {
      column-count: 2;
    }
  }
  @container (width > 60em) {
    .galleri {
      column-count: 5;
    }
  }
  .galleri img {
    margin-bottom: var(--size-3);
  }
  .pic1 {
    width: 150%;
    height: 114%;
    margin-left: 113%;
  }
  .pic2 {
    margin-top: 2%;
    width: 143%;
    height: 100%;
    margin-left: 115%;
  }
  .pic3 {
    margin-left: 90%;
    margin-top: 40%;
    width: 130%;
    height: 100%;
  }
  .pic4 {
    margin-left: 190%;
    margin-top: -70%;
    width: 100%;
    height: 100%;
  }
  .pic5 {
    margin-left: 121%;
    margin-top: -35%;
    width: 100%;
    height: 100%;
  }
</style>
